# this tool is SAFE and only sends to a local SMTP server on 127.0.0.1
SMTP_HOST=127.0.0.1
SMTP_PORT=1025

# optional auth if your local server needs it
SMTP_USER=
SMTP_PASS=

# envelope addresses for your local test
MAIL_FROM=test@local.test
MAIL_TO=sink@local.test

# load settings
MESSAGES=1000
CONCURRENCY=10
RATE=0            # 0 = unlimited, or set e.g. 200

# content
SUBJECT_LEN=32
MIN_BYTES=200
MAX_BYTES=2000

# output
METRICS=metrics.jsonl